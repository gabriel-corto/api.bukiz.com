generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  createdAt DateTime
  updatedAt DateTime

  @@map("users")
}

model Notification {
  id          String    @id
  content     String
  recipientId String
  readAt      DateTime?
  hasRead     Boolean
  createdAt   DateTime

  @@map("notifications")
}
