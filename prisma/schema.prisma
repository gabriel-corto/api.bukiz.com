generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Costumer {
  id             String    @id
  email          String    @unique
  createdAt      DateTime
  updatedAt      DateTime
  otp_code       String?
  otp_expires_in DateTime?

  @@map("costumers")
}

model Notification {
  id          String    @id
  content     String
  recipientId String
  readAt      DateTime?
  hasRead     Boolean
  createdAt   DateTime

  @@map("notifications")
}

model Book {
  id        String   @id
  title     String
  cover     String?
  author    String
  category  BookCategory
  price     Int
  stock     Int
  createdAt DateTime

  @@map("books")
}

enum BookCategory {
  Finance
  Technology
  Business
  Education
  Health
}